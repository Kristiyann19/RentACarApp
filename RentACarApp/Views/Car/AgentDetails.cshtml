@model CarViewModel
@{
    ViewData["Title"] = "Agent Details";
}
<div class="text-center row">
    <h5 class="card-title mt-1">@Model.Agent.FirstName @Model.Agent.LastName</h5>
                <p class="mb-0">Email @Model.Agent.Email</p>
                <p class="mb-0">Phone: @Model.Agent.PhoneNumber</p>
                <p class="mb-0">Contact name: @Model.Agent.UserName</p>
                
            <form class="form-inline" asp-controller="Home" asp-action="Contact">
                <button type="submit" class="fs-6 btn btn-success mb-3 p-2">Contact Agent</button>
            </form>

    <form class="input-group-sm" asp-controller="Car" asp-action="BackToList" asp-route-carId="@Model.Id">
                <input type="submit" value="Back To List" class="fs-6 btn btn-success mb-3 p-2" />
            </form>            
                
               
</div>
