@model IEnumerable<CarViewModel>
@{
    ViewBag.Title = "Rented Cars";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var car in Model)
    {

        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">@car.Make @car.Model</h5>
                <p class="mb-0">Price: @car.Price</p>
            </div>
            <form class="input-group-sm" asp-controller="Car" asp-action="RemoveCarFromCart" asp-route-carId="@car.Id">
                <input type="submit" value="Remove" class="fs-6 btn btn-success mb-3 p-2" />
            </form>         
        </div>    
    }
        <p class="mb-0">Total Price: @Model.Sum(x => x.Price)$</p> 

          <form class="input-group-sm" asp-controller="Car" asp-action="BackToList" >
                <input type="submit" value="Back To List" class="fs-6 btn btn-success mb-3 p-2" />
          </form>

</div>